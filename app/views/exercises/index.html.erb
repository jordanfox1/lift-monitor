<p style="color: green"><%= notice %></p>

<h1>Exercises</h1>

<div id="exercises">
  <% @exercises.each do |exercise| %>

    <% if exercise.is_a?(Exercise) %>
      <%= render exercise %>
      <p>
        <%= link_to "Show this exercise", exercise %>
      </p>

    <% else %>
     <%= render partial: 'standard_exercise', locals: { exercise: exercise } %>
     <p>
      <%= link_to "Show this exercise", exercise_path(exercise) %>
    </p>
    <% end %>
  <% end %>
</div>

<%= link_to "New exercise", new_exercise_path %>
